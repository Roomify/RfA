/**
 * Update existing pets to define a default language (EN).
 */
function roomify_casa_pet_update_7016() {
  $pets = db_select('pets', 'p')
    ->fields('p', array('name'))
    ->condition('language', 'en')
    ->execute()
    ->fetchAll();

  foreach ($pets as $pet) {
    db_delete('pets')
      ->condition('name', $pet->name)
      ->condition('language', '')
      ->execute();
  }

  db_update('pets')
    ->fields(array('language' => 'en'))
    ->condition('language', '')
    ->execute();
}
