/**
 * Custom validate function for the user_register_form form.
 */
function roomify_accommodation_booking_form_user_register_form_validate($form, &$form_state) {
  if (isset($form_state['values']['mail']) && empty($form_state['values']['mail'])) {
    $form_state['values']['mail'] = user_password() . '@example.com';
  }

  // Username is empty.
  if (isset($form_state['values']['name']) && empty($form_state['values']['name'])) {
    // We are going to create one for the user.
    if (isset($form_state['values']['user_first_name'][LANGUAGE_NONE][0]['value']) && !empty($form_state['values']['user_first_name'][LANGUAGE_NONE][0]['value'])) {
      $form_state['values']['name'] = commerce_order_unique_username($form_state['values']['user_first_name'][LANGUAGE_NONE][0]['value']);
    }
    elseif (isset($form_state['values']['user_last_name'][LANGUAGE_NONE][0]['value']) && !empty($form_state['values']['user_last_name'][LANGUAGE_NONE][0]['value'])) {
      $form_state['values']['name'] = commerce_order_unique_username($form_state['values']['user_last_name'][LANGUAGE_NONE][0]['value']);
    }
    else {
      $form_state['values']['name'] = commerce_order_unique_username('rfa-guest-' . user_password(6));
    }
  }

  $form_state['values']['pass'] = user_password();
}

/**
 * Custom submit function for the user_register_form form.
 */
function roomify_accommodation_booking_form_user_register_form_submit($form, &$form_state) {
  if ($guest_role = user_role_load_by_name('guest')) {
    $form_state['values']['roles'][$guest_role->rid] = $guest_role->rid;
  }
}

