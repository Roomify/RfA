function roomify_system_form_alter(&$form, &$form_state, $form_id) {
  // Remove preview from nodes.
  if (isset($form['#node_edit_form']) && $form['#node_edit_form']) {
    if (isset($form['actions']['preview'])) {
      unset($form['actions']['preview']);
    }
    if (isset($form['actions']['preview_changes'])) {
      unset($form['actions']['preview_changes']);
    }
  }
  if ($form_id == 'user_profile_form' || $form_id == 'user_register_form') {
    if (isset($form['redirect'])) {
      $form['redirect']['#access'] = FALSE;
    }
    if (isset($form['metatags'])) {
      $form['metatags']['#access'] = FALSE;
    }
  }
  if (isset($form['redirect'])) {
    if ($form['redirect']['#type'] == 'fieldset') {
      $form['redirect']['#group'] = 'additional_settings';
    }
  }
  if ($form_id == 'g_forms') {
    $form['#validate'][] = 'check_google_recaptcha_keys';
  }
}

/**
 * Check if keys are set.
 */
function check_google_recaptcha_keys($form, &$form_state) {
  $settings = variable_get('google_recaptcha', array());
  // Google recaptcha is not set.
  if (empty($settings['public_key']) || empty($settings['secret_key'])) {
    $values = array_filter($form_state['values']['available_forms']);
    if (!empty($values)) {
      // User should not protect forms if keys are not set.
      foreach ($form_state['values']['available_forms'] as $key => $value) {
        $form_state['values']['available_forms'][$key] = 0;
      }
      drupal_set_message(t('It seems that your Google reCAPTCHA keys are not set. Click on the "Keys and Settings" tab and set those before protecting forms.'), 'warning');
    }
  }
}

